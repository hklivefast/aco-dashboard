<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Members - LIVEFAST ACO</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      <span>AC</span> LIVEFAST ACO
    </a>
    
    <div class="navbar-nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/products">Products</a>
      <a href="/releases">Releases</a>
      <a href="/admin" class="active">Admin</a>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <div class="d-flex justify-between align-center mb-3" style="flex-wrap: wrap; gap: 1rem;">
      <h1 style="font-size: 1.5rem;">Members</h1>
      <a href="/admin/manage-admins" class="btn btn-warning">Manage Admins</a>
    </div>

    <div class="card">
      <% if (members.length > 0) { %>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Avatar</th>
              <th>Username</th>
              <th>Discord ID</th>
              <th>Role</th>
              <th>Joined</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% members.forEach(function(member) { %>
            <tr>
              <td>
                <% if (member.avatar) { %>
                <img src="https://cdn.discordapp.com/avatars/<%= member.id %>/<%= member.avatar %>.png" alt="<%= member.username %>" style="width: 40px; height: 40px; border-radius: 50%; border: 2px solid var(--accent-primary);">
                <% } else { %>
                <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= member.username %>" style="width: 40px; height: 40px; border-radius: 50%;">
                <% } %>
              </td>
              <td><strong><%= member.username %></strong></td>
              <td><code><%= member.id %></code></td>
              <td>
                <% if (member.is_admin) { %>
                <span class="badge badge-warning">Admin</span>
                <% } else { %>
                <span class="badge badge-info">Member</span>
                <% } %>
              </td>
              <td><%= new Date(member.created_at).toLocaleDateString() %></td>
              <td>
                <% if (member.is_admin) { %>
                  <% if (member.id !== user.id) { %>
                <form action="/admin/members/<%= member.id %>/demote" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger btn-sm">Remove Admin</button>
                </form>
                  <% } else { %>
                <span style="color: var(--text-muted); font-size: 0.8125rem;">Current user</span>
                  <% } %>
                <% } else { %>
                <form action="/admin/members/<%= member.id %>/promote" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-success btn-sm">Make Admin</button>
                </form>
                <% } %>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">USERS</div>
        <p>No members yet.</p>
      </div>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <p>AC LIVEFAST ACO - Automated Checkout Services</p>
  </footer>

  <script src="/js/app.js"></script>
</body>
</html>
