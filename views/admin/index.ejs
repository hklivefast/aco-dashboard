<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin Dashboard - ACO Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      <span>âš¡</span> ACO Dashboard
    </a>
    
    <div class="navbar-nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/products">Products</a>
      <a href="/releases">Releases</a>
      <a href="/admin" class="active">Admin</a>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <div class="hero" style="padding: 2rem;">
      <h1 style="font-size: 2rem;">âš™ï¸ Admin Dashboard</h1>
      <p>Manage your ACO Dashboard</p>
    </div>

    <div class="grid grid-4">
      <div class="stat-card">
        <div class="stat-value"><%= stats.totalUsers %></div>
        <div class="stat-label">ğŸ‘¥ Users</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= stats.totalProducts %></div>
        <div class="stat-label">ğŸ“¦ Products</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= stats.totalCheckouts %></div>
        <div class="stat-label">ğŸ›’ Checkouts</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= stats.totalReleases %></div>
        <div class="stat-label">ğŸ“… Releases</div>
      </div>
    </div>

    <div class="grid grid-2 mt-3">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title">ğŸš€ Quick Links</h2>
        </div>
        <div class="d-flex flex-column gap-2">
          <a href="/admin/products" class="btn btn-secondary" style="justify-content: flex-start;">
            <span>ğŸ“¦</span> Manage Products
          </a>
          <a href="/admin/releases" class="btn btn-secondary" style="justify-content: flex-start;">
            <span>ğŸ“…</span> Manage Releases
          </a>
          <a href="/admin/signups" class="btn btn-secondary" style="justify-content: flex-start;">
            <span>ğŸ“</span> View Signups
          </a>
          <a href="/admin/checkouts" class="btn btn-secondary" style="justify-content: flex-start;">
            <span>ğŸ›’</span> All Checkouts
          </a>
          <a href="/admin/members" class="btn btn-secondary" style="justify-content: flex-start;">
            <span>ğŸ‘¥</span> Member List
          </a>
        </div>
      </div>

      <div class="card">
        <div class="card-header">
          <h2 class="card-title">ğŸ• Recent Signups</h2>
        </div>
        
        <% if (stats.recentSignups && stats.recentSignups.length > 0) { %>
        <div class="table-container">
          <table>
            <thead>
              <tr>
                <th>User</th>
                <th>Release</th>
                <th>Date</th>
              </tr>
            </thead>
            <tbody>
              <% stats.recentSignups.forEach(function(signup) { %>
              <tr>
                <td><%= signup.username %></td>
                <td><%= signup.release_name %></td>
                <td><%= new Date(signup.created_at).toLocaleDateString() %></td>
              </tr>
              <% }); %>
            </tbody>
          </table>
        </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">ğŸ“</div>
          <p>No recent signups</p>
        </div>
        <% } %>
      </div>
    </div>
  </main>

  <footer class="footer">
    <p>âš¡ ACO Dashboard â€” Automated Checkout Services</p>
  </footer>

  <script src="/js/app.js"></script>
</body>
</html>
