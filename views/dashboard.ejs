<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Dashboard - LIVEFAST ACO</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      <span>AC</span> LIVEFAST ACO
    </a>
    
    <% if (user) { %>
    <div class="navbar-nav">
      <a href="/dashboard" class="active">Dashboard</a>
      <a href="/products">Select Products</a>
      <a href="/my-selections">My Selections</a>
      <a href="/releases">Releases</a>
      <a href="/my-checkouts">My Checkouts</a>
      
      <% if (user.isAdmin) { %>
      <a href="/admin">Admin</a>
      <% } %>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
    <% } %>
  </nav>

  <main class="container">
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
      <% success_msg.forEach(function(msg) { %>
        <div class="alert alert-success"><%= msg %></div>
      <% }); %>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
      <% error_msg.forEach(function(msg) { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }); %>
    <% } %>

    <% if (user) { %>
    <div class="hero">
      <h1>Welcome, <%= user.username %>!</h1>
      <p>Your LIVEFAST ACO Dashboard - Track products, releases, and checkouts</p>
    </div>

    <div class="grid grid-4">
      <div class="stat-card">
        <div class="stat-value"><%= products.filter(p => p.category === 'Pokemon - Target').length %></div>
        <div class="stat-label">Pokemon</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= products.filter(p => p.category === 'Sports Cards').length %></div>
        <div class="stat-label">Sports Cards</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= products.filter(p => p.category === 'One Piece').length %></div>
        <div class="stat-label">One Piece</div>
      </div>
      <div class="stat-card">
        <div class="stat-value"><%= selections ? selections.length : 0 %></div>
        <div class="stat-label">My Selections</div>
      </div>
    </div>

    <div class="grid grid-2 mt-3">
      <div class="card">
        <div class="card-header">
          <h2 class="card-title">My Product Selections</h2>
          <a href="/products" class="btn btn-primary btn-sm">+ Add Products</a>
        </div>
        
        <% if (selections && selections.length > 0) { %>
          <div style="display: flex; flex-direction: column; gap: 0.5rem;">
            <% selections.forEach(function(sel) { %>
            <div class="checkout-item-card">
              <div class="checkout-item-details">
                <div class="checkout-item-name"><%= sel.product_name %></div>
                <div class="checkout-item-meta">
                  Qty: <%= sel.quantity === 'No Limit' ? 'No Limit' : sel.quantity %>
                </div>
              </div>
              <form action="/selections/<%= sel.id %>" method="POST" style="display: inline;" onsubmit="this.method='DELETE'; return true;">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-sm">Remove</button>
              </form>
            </div>
            <% }); %>
          </div>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">BOX</div>
          <p>No products selected yet.</p>
          <a href="/products" class="btn btn-primary mt-2">Browse Products</a>
        </div>
        <% } %>
      </div>

      <div class="card">
        <div class="card-header">
          <h2 class="card-title">Upcoming Releases</h2>
          <a href="/releases" class="btn btn-outline btn-sm">View All</a>
        </div>
        
        <% if (releases.length > 0) { %>
          <% releases.slice(0, 3).forEach(function(release) { %>
          <div class="release-card">
            <div class="release-date"><%= new Date(release.release_date).toLocaleDateString() %></div>
            <div class="release-name"><%= release.name %></div>
            <% if (release.google_form_url) { %>
            <a href="<%= release.google_form_url %>" target="_blank" class="btn btn-primary btn-sm mt-2">Sign Up</a>
            <% } %>
          </div>
          <% }); %>
        <% } else { %>
        <div class="empty-state">
          <div class="empty-state-icon">DATE</div>
          <p>No upcoming releases.</p>
        </div>
        <% } %>
      </div>
    </div>

    <div class="card mt-3">
      <div class="card-header">
        <h2 class="card-title">Quick Actions</h2>
      </div>
      <div class="d-flex gap-2 flex-wrap">
        <a href="/products" class="btn btn-primary">Select Products</a>
        <a href="/releases" class="btn btn-secondary">View Releases</a>
        <a href="/my-checkouts" class="btn btn-outline">My Checkouts</a>
        <% if (user.isAdmin) { %>
        <a href="/admin" class="btn btn-outline">Admin Panel</a>
        <% } %>
      </div>
    </div>
    <% } else { %>
    <div class="hero">
      <h1>LIVEFAST ACO</h1>
      <p>Your automated checkout command center. Track products, manage releases, and monitor checkouts all in one place.</p>
      <a href="/login" class="btn btn-primary btn-lg">Login with Discord</a>
    </div>

    <div class="grid grid-3">
      <div class="stat-card">
        <div class="stat-value" style="font-size: 2rem;">PKM</div>
        <div class="stat-label">Pokemon Products</div>
      </div>
      <div class="stat-card">
        <div class="stat-value" style="font-size: 2rem;">SPT</div>
        <div class="stat-label">Sports Cards</div>
      </div>
      <div class="stat-card">
        <div class="stat-value" style="font-size: 2rem;">OPC</div>
        <div class="stat-label">One Piece TCG</div>
      </div>
    </div>
    <% } %>
  </main>

  <footer class="footer">
    <p>AC LIVEFAST ACO - Automated Checkout Services</p>
  </footer>

  <script src="/js/app.js"></script>
</body>
</html>
