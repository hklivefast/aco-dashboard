<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Checkouts - ACO Dashboard</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      <span>âš¡</span> ACO Dashboard
    </a>
    
    <div class="navbar-nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/products">Products</a>
      <a href="/releases">Releases</a>
      <a href="/admin" class="active">Admin</a>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <div class="d-flex justify-between align-center mb-3" style="flex-wrap: wrap; gap: 1rem;">
      <h1 style="font-size: 1.5rem;">ðŸ›’ All Checkouts</h1>
    </div>

    <div class="card">
      <% if (checkouts.length > 0) { %>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>User</th>
              <th>Product</th>
              <th>SKU</th>
              <th>Qty</th>
              <th>Status</th>
              <th>Notes</th>
              <th>Date</th>
            </tr>
          </thead>
          <tbody>
            <% checkouts.forEach(function(checkout) { %>
            <tr>
              <td><%= checkout.username %></td>
              <td><%= checkout.product_name || 'Unknown' %></td>
              <td><code><%= checkout.sku || '-' %></code></td>
              <td><%= checkout.quantity %></td>
              <td>
                <span class="badge badge-<%= checkout.status === 'success' ? 'success' : (checkout.status === 'pending' ? 'warning' : (checkout.status === 'processing' ? 'info' : 'danger')) %>">
                  <%= checkout.status %>
                </span>
              </td>
              <td><%= checkout.notes || '-' %></td>
              <td><%= new Date(checkout.created_at).toLocaleString() %></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">ðŸ›’</div>
        <p>No checkouts yet.</p>
      </div>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <p>âš¡ ACO Dashboard â€” Automated Checkout Services</p>
  </footer>

  <script src="/js/app.js"></script>
</body>
</html>
