<div class="card">
  <div class="card-header">
    <h2 class="card-title">Upcoming Releases</h2>
  </div>
  
  <% if (releases.length > 0) { %>
    <% releases.forEach(function(release) { %>
    <div class="release-card">
      <div class="d-flex justify-between align-center mb-2">
        <div>
          <div class="release-date">üìÖ <%= new Date(release.release_date).toLocaleDateString() %></div>
          <div class="release-name"><%= release.name %></div>
        </div>
        <% if (release.google_form_url) { %>
        <a href="<%= release.google_form_url %>" target="_blank" class="btn btn-primary">Sign Up</a>
        <% } %>
      </div>
      
      <% if (release.description) { %>
      <p class="release-description"><%= release.description %></p>
      <% } %>
      
      <div class="mt-2">
        <span class="badge badge-info">
          <%= Math.ceil((new Date(release.release_date) - new Date()) / (1000 * 60 * 60 * 24)) %> days until release
        </span>
      </div>
    </div>
    <% }); %>
  <% } else { %>
  <div class="empty-state">
    <p class="empty-state-icon">üìÖ</p>
    <p>No upcoming releases scheduled.</p>
  </div>
  <% } %>
</div>

