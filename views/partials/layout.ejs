<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title || 'LIVEFAST ACO' %></title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      <span>AC</span> LIVEFAST ACO
    </a>
    
    <% if (user) { %>
    <div class="navbar-nav">
      <a href="/dashboard" <%= title && title.includes('Dashboard') ? 'class=active' : '' %>>Dashboard</a>
      <a href="/products" <%= title && title.includes('Products') ? 'class=active' : '' %>>Products</a>
      <a href="/releases" <%= title && title.includes('Releases') ? 'class=active' : '' %>>Releases</a>
      
      <% if (user.isAdmin) { %>
      <a href="/admin" <%= title && title.includes('Admin') ? 'class=active' : '' %>>Admin</a>
      <% } %>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
    <% } %>
  </nav>

  <main class="container">
    <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
      <% success_msg.forEach(function(msg) { %>
        <div class="alert alert-success"><%= msg %></div>
      <% }); %>
    <% } %>
    
    <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
      <% error_msg.forEach(function(msg) { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }); %>
    <% } %>
    
    <% if (typeof error !== 'undefined' && error.length > 0) { %>
      <% error.forEach(function(msg) { %>
        <div class="alert alert-danger"><%= msg %></div>
      <% }); %>
    <% } %>
    
    <%- body %>
  </main>

  <% if (!user) { %>
  <footer class="footer">
    <p>AC LIVEFAST ACO - Automated Checkout Services</p>
    <p style="margin-top: 0.5rem; font-size: 0.8125rem;">Login with Discord to access the dashboard</p>
  </footer>
  <% } else { %>
  <footer class="footer">
    <p>AC LIVEFAST ACO - Automated Checkout Services</p>
  </footer>
  <% } %>

  <script src="/js/app.js"></script>
</body>
</html>
