<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Select Products - LIVEFAST ACO</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      LIVEFAST ACO
    </a>
    
    <div class="navbar-nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/products" class="active">Select Products</a>
      <a href="/my-selections">My Selections</a>
      <a href="/releases">Releases</a>
      <a href="/my-checkouts">My Checkouts</a>
      
      <% if (user.isAdmin) { %>
      <a href="/admin">Admin</a>
      <% } %>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <div class="card">
      <div class="card-header">
        <h2 class="card-title">Select Your Products</h2>
        <span class="badge badge-info"><%= products.length %> Products Available</span>
      </div>
      
      <div class="category-tabs">
        <a href="/products" class="category-tab <%= !selectedCategory ? 'active' : '' %>">All Products</a>
        <a href="/products?category=Pokemon%20-%20Target" class="category-tab <%= selectedCategory === 'Pokemon - Target' ? 'active' : '' %>">Pokemon</a>
        <a href="/products?category=Sports%20Cards" class="category-tab <%= selectedCategory === 'Sports Cards' ? 'active' : '' %>">Sports Cards</a>
        <a href="/products?category=One%20Piece" class="category-tab <%= selectedCategory === 'One Piece' ? 'active' : '' %>">One Piece</a>
      </div>
      
      <% if (products.length > 0) { %>
      <div class="product-grid">
        <% products.forEach(function(product) { %>
        <div class="product-card">
          <img src="<%= product.image || '/images/placeholder.png' %>" alt="<%= product.name %>" class="product-image" onerror="this.src='data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%27180%27 height=%27180%27/%3E'">
          <div class="product-name"><%= product.name %></div>
          <div class="product-sku">SKU: <%= product.sku %></div>
          <div class="product-description"><%= product.description %></div>
          
          <form action="/selections" method="POST" class="product-selection">
            <input type="hidden" name="product_id" value="<%= product.id %>">
            
            <div class="qty-row">
              <label>Quantity:</label>
              <input type="number" name="quantity" value="1" min="1" id="qty-<%= product.id %>">
            </div>
            
            <label class="no-limit-label">
              <input type="checkbox" id="nolimit-<%= product.id %>" onchange="toggleQty('<%= product.id %>')">
              <span>No Limit</span>
            </label>
            
            <button type="submit" class="btn btn-primary" style="width: 100%;">
              Add to My Selection
            </button>
          </form>
        </div>
        <% }); %>
      </div>
      <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">BOX</div>
        <p>No products found in this category.</p>
      </div>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <p>LIVEFAST ACO - Automated Checkout Services</p>
  </footer>

  <script src="/js/app.js"></script>
  <script>
  function toggleQty(productId) {
    const checkbox = document.getElementById('nolimit-' + productId);
    const qtyInput = document.getElementById('qty-' + productId);
    
    if (checkbox.checked) {
      qtyInput.value = 'No Limit';
      qtyInput.disabled = true;
    } else {
      qtyInput.value = '1';
      qtyInput.disabled = false;
    }
  }
  </script>
</body>
</html>
