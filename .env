# ACO Dashboard Environment Configuration
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (generate a secure random string for production)
SESSION_SECRET=your-super-secret-session-key-change-this

# Discord OAuth2 Configuration
# Get these from https://discord.com/developers/applications
DISCORD_CLIENT_ID=your-discord-client-id
DISCORD_CLIENT_SECRET=your-discord-client-secret

# Your Discord Server/Guild ID
# Right-click your server name in Discord > Copy ID
DISCORD_GUILD_ID=your-discord-guild-id

# OAuth Callback URL
# For development: http://localhost:3000/auth/discord/callback
# For production: https://your-domain.com/auth/discord/callback
DISCORD_CALLBACK_URL=http://localhost:3000/auth/discord/callback
