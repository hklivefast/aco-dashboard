<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Releases - LIVEFAST ACO</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <nav class="navbar">
    <a href="/" class="navbar-brand">
      <span>AC</span> LIVEFAST ACO
    </a>
    
    <div class="navbar-nav">
      <a href="/dashboard">Dashboard</a>
      <a href="/products">Products</a>
      <a href="/releases">Releases</a>
      <a href="/admin" class="active">Admin</a>
      
      <div class="user-info">
        <% if (user.avatar) { %>
        <img src="https://cdn.discordapp.com/avatars/<%= user.id %>/<%= user.avatar %>.png" alt="<%= user.username %>">
        <% } else { %>
        <img src="https://cdn.discordapp.com/embed/avatars/0.png" alt="<%= user.username %>">
        <% } %>
        <span><%= user.username %></span>
        <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
      </div>
    </div>
  </nav>

  <main class="container">
    <div class="d-flex justify-between align-center mb-3" style="flex-wrap: wrap; gap: 1rem;">
      <h1 style="font-size: 1.5rem;">Manage Releases</h1>
      <button class="btn btn-primary" onclick="openReleaseModal()">+ Add Release</button>
    </div>

    <div class="card">
      <% if (releases.length > 0) { %>
      <div class="table-container">
        <table>
          <thead>
            <tr>
              <th>Name</th>
              <th>Release Date</th>
              <th>Google Form</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% releases.forEach(function(release) { %>
            <tr>
              <td><%= release.name %></td>
              <td><%= new Date(release.release_date).toLocaleDateString() %></td>
              <td>
                <% if (release.google_form_url) { %>
                <a href="<%= release.google_form_url %>" target="_blank" class="btn btn-outline btn-sm">View Form</a>
                <% } else { %>
                <span style="color: var(--text-muted);">No form</span>
                <% } %>
              </td>
              <td>
                <div class="d-flex gap-1">
                  <button class="btn btn-secondary btn-sm" onclick="editRelease('<%= release.id %>', '<%= release.name.replace(/'/g, "\\'") %>', '<%= release.release_date %>', '<%= release.google_form_url || '' %>', '<%= release.description ? release.description.replace(/'/g, "\\'") : '' %>')">
                    Edit
                  </button>
                  <form action="/admin/releases/<%= release.id %>" method="DELETE" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this release?');">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </div>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
      <% } else { %>
      <div class="empty-state">
        <div class="empty-state-icon">DATE</div>
        <p>No releases yet. Add your first release!</p>
      </div>
      <% } %>
    </div>
  </main>

  <footer class="footer">
    <p>LIVEFAST ACO - Automated Checkout Services</p>
  </footer>

  <!-- Add/Edit Release Modal -->
  <div class="modal-overlay" id="releaseModal">
    <div class="modal">
      <div class="modal-header">
        <h3 id="releaseModalTitle">Add Release</h3>
        <button class="modal-close" onclick="closeReleaseModal()">Ã—</button>
      </div>
      <form id="releaseForm" action="/admin/releases" method="POST">
        <input type="hidden" name="id" id="releaseId">
        
        <div class="form-group">
          <label class="form-label">Release Name *</label>
          <input type="text" class="form-control" name="name" id="releaseName" required placeholder="Enter release name">
        </div>
        
        <div class="form-group">
          <label class="form-label">Release Date *</label>
          <input type="date" class="form-control" name="release_date" id="releaseDate" required>
        </div>
        
        <div class="form-group">
          <label class="form-label">Google Form URL</label>
          <input type="url" class="form-control" name="google_form_url" id="releaseFormUrl" placeholder="https://forms.google.com/...">
        </div>
        
        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea class="form-control" name="description" id="releaseDescription" rows="3" placeholder="Enter description"></textarea>
        </div>
        
        <div class="d-flex gap-2 justify-between mt-3">
          <button type="button" class="btn btn-secondary" onclick="closeReleaseModal()">Cancel</button>
          <button type="submit" class="btn btn-primary" id="releaseSubmitBtn">Add Release</button>
        </div>
      </form>
    </div>
  </div>

  <script src="/js/app.js"></script>
  <script>
  function openReleaseModal() {
    document.getElementById('releaseModalTitle').textContent = 'Add Release';
    document.getElementById('releaseForm').action = '/admin/releases';
    document.getElementById('releaseId').value = '';
    document.getElementById('releaseName').value = '';
    document.getElementById('releaseDate').value = '';
    document.getElementById('releaseFormUrl').value = '';
    document.getElementById('releaseDescription').value = '';
    document.getElementById('releaseSubmitBtn').textContent = 'Add Release';
    document.getElementById('releaseModal').classList.add('active');
  }

  function editRelease(id, name, date, formUrl, description) {
    document.getElementById('releaseModalTitle').textContent = 'Edit Release';
    document.getElementById('releaseForm').action = '/admin/releases/' + id;
    document.getElementById('releaseId').value = id;
    document.getElementById('releaseName').value = name;
    document.getElementById('releaseDate').value = date;
    document.getElementById('releaseFormUrl').value = formUrl;
    document.getElementById('releaseDescription').value = description;
    document.getElementById('releaseSubmitBtn').textContent = 'Save Changes';
    document.getElementById('releaseModal').classList.add('active');
  }

  function closeReleaseModal() {
    document.getElementById('releaseModal').classList.remove('active');
  }

  document.getElementById('releaseModal').addEventListener('click', function(e) {
    if (e.target === this) {
      closeReleaseModal();
    }
  });
  </script>
</body>
</html>
